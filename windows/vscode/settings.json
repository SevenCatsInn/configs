{
    "workbench.startupEditor": "none",
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,
    "window.title": "${dirty}${rootName}${separator}${profileName}",
    "window.newWindowDimensions": "maximized",
    
    "workbench.colorTheme": "GitHub Dark",
    "workbench.iconTheme": "icons",
    "workbench.activityBar.location": "hidden",
    "workbench.sideBar.location": "right",
    "workbench.panel.defaultLocation": "left",
    "workbench.editor.showTabs": "single",
    "workbench.editor.enablePreview": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.layoutControl.enabled": false,
    "workbench.settings.applyToAllProfiles": [
        "workbench.colorCustomizations"
    ],
    "workbench.colorCustomizations": {
        "editorWarning.foreground": "#ff9100a8",
        "editorError.foreground": "#ff0000b9",
        "editorInfo.foreground": "#00000000",
        "editorOverviewRuler.errorForeground": "#00000000",
        "editorOverviewRuler.warningForeground": "#00000000",
        "minimap.errorHighlight": "#00000000",
        "minimap.warningHighlight": "#00000000",
        "peekView.border": "#7a28b2",
        "editorGroup.border": "#ff000062",
        // Delete these below for light themes
        "statusBar.debuggingForeground": "#ffffff",
        "debugConsole.infoForeground": "#8d8d8d",
        // "statusBar.foreground": "#ffffff",
        // "debugConsole.infoForeground": "#000000",
    },
    
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontWeight": 400,
    "editor.fontSize": 13,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.minimap.enabled": false,
    "editor.minimap.autohide": true,
    "editor.minimap.scale": 2,
    "editor.guides.indentation": false,
    "editor.unfoldOnClickAfterEndOfLine": true,
    "editor.inlineSuggest.syntaxHighlightingEnabled": true,
    
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.external.windowsExec": "C:\\Users\\fvaccari\\AppData\\Local\\MicrOsoft\\WindowsApps\\Microsoft.PowerShell_8wekyb3d8bbwe\\pwsh.exe",
    
    "debug.console.fontSize": 13,
    "debug.console.fontFamily": "JetBrainsMono Nerd Font",
    "debug.openDebug": "openOnSessionStart",
    "debug.internalConsoleOptions": "neverOpen",
    "debug.terminal.clearBeforeReusing": true,
    
    "python.defaultInterpreterPath": "c:\\Users\\fvaccari\\repositories\\sandbox\\.venv\\Scripts\\python.exe",
    "python.languageServer": "Pylance",
    "python.terminal.executeInFileDir": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    
    "jupyter.runStartupCommands": [
        "%load_ext autoreload",
        "%autoreload 2"
    ],
    "jupyter.logging.level": "debug",
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "jupyter.themeMatplotlibPlots": true,
    "jupyter.askForKernelRestart": false,
    
    "chat.editor.fontSize": 13,
    "chat.commandCenter.enabled": false,
    
    "markdown.preview.fontSize": 13,
    
    "search.mode": "reuseEditor",
    "search.searchEditor.focusResultsOnSearch": true,
    "search.collapseResults": "alwaysCollapse",
    "search.searchEditor.doubleClickBehaviour": "openLocationToSide",
    "search.searchEditor.defaultNumberOfContextLines": 4,
    "search.searchOnTypeDebouncePeriod": 1000,
    "search.seedWithNearestWord": true,
    "search.searchOnType": false,
    "search.quickOpen.history.filterSortOrder": "recency",
    
    "security.workspace.trust.untrustedFiles": "open",
    "git.blame.editorDecoration.enabled": false,
    
    "ruff.nativeServer": "on",
    "ruff.exclude": [
        "\\Interactive*",
        "**\\.venv"
    ],
    
    "glassit.alpha": 225,
    "glassit.step": 10,
    
    "errorLens.enabled": true,
    
    "inlineChat.accessibleDiffView": "off",
    
    "outline.showConstants": false,
    "outline.showVariables": false,
    "outline.problems.enabled": false,
    
    "problems.decorations.enabled": false,
    
    "breadcrumbs.enabled": false,
    
    "vim.smartRelativeLine": true,
    "vim.leader": " ",
    "vim.useSystemClipboard": true,
    "vim.foldfix": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"],
            "commands": ["workbench.action.files.save"]
        }
    ], 
    "vim.normalModeKeyBindings": [
        {
            "before": [ "<leader>", "b" ],
            "commands": [ "editor.debug.action.toggleBreakpoint" ]
        },
        {
            "before": [ "<leader>", "m", "t" ],
            "commands": [ "errorLens.toggle" ]
         },
        {
            "before": [ "<leader>", "e" ],
            "commands": ["workbench.view.explorer"]
        },
        {
            "before": [ "<leader>", "s", "f" ],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": [ "<leader>", "/"],
            "commands": [ "fuzzySearch.activeTextEditor" ]
        },
        {
            "before": [ "<leader>", "m", "t" ],
            "commands": [ "errorLens.toggle" ]
        },        
        {
            "before": [ "<leader>", "p" ],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": [ "<leader>", "o" ],
            "commands": [ "workbench.view.explorer","outline.focus" ]
        },
        {
            "before": [ "<leader>", "q"],
            "commands": ["workbench.panel.markers.view.focus",]
        },
        {
            "before": [ "<leader>", "m", "t" ],
            "commands": [ "errorLens.toggle" ]
        },
        {
            "before": [ "<leader>", "h"],
            "commands": ["references-view.showCallHierarchy"]
        },        
        {
            "before": [ "<leader>", "v"],
            "commands": [ "editor.debug.action.showDebugHover" ]
        },
        {
            "before": [ "<leader>", "s", "g"],
            "commands": [ "workbench.action.findInFiles" ]
        },
        {
            "before": [ "<leader>", "d", "b"],
            "commands": [ "workbench.debug.action.focusBreakpointsView" ]
        },
        {
            "before": [ "<leader>", "d", "v"],
            "commands": [ "workbench.debug.action.focusVariablesView" ]
        },
        {
            "before": [ "<leader>", "d", "c"],
            "commands": [ "workbench.debug.action.focusCallStackView" ]
        },
        {
            "before": [ "<leader>", "d", "w"],
            "commands": [ "workbench.debug.action.focusWatchView" ]
        },
        {
            "before": [ "<leader>", "t", "o"],
            "commands": [ ":tabonly" ]
        },
        {
            "before": [ "<leader>", "l"],
            "commands": [ "editor.action.showHover" ]
        },
        {
            "before": [ "<leader>", "r", "r"],
            "commands": [ "jupyter.runcurrentcell" ]
        },
        {
            "before": [ "<leader>", "r", "a"],
            "commands": [ "jupyter.runallcellsabove.palette" ]
        },
        {
            "before": [ "<leader>", "r", "b"],
            "commands": [ "jupyter.runcurrentcellandallbelow.palette" ]
        },
        {
            "before": [ "<leader>", "r", "t"],
            "commands": [ "python.execInTerminal" ]
        },
        {
            "before": [ "<leader>", "c", "l"],
            "commands": [ "jupyter.interactive.clearAllCells" ]
        },
        {
            "before": [ "<leader>", "f"],
            "commands": ["editor.action.formatDocument",]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [ "<leader>", "p" ],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": [ "<leader>", "r"],
            "commands": [ "jupyter.execSelectionInteractive" ]
        },
        {
            "before": [ "<leader>", "s", "g"],
            "commands": [ "workbench.action.findInFiles" ]
        },
        {
            "before": [ "<leader>", "s", "f" ],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": [ "<leader>", "d", "w"],
            "commands": [ "editor.debug.action.selectionToWatch" ]
        },
        {
            "before": [ "<leader>", "/"],
            "commands": [ "fuzzySearch.activeTextEditorWithCurrentSelection" ]
        },
        {
            "before": [ "<leader>", "f"],
            "commands": ["editor.action.formatSelection",]
        }
    ],
    
    "notebook.output.scrolling": true,
    
    "betterGitLineBlame.showInlineAnnotations": false,
    
    "continue.enableTabAutocomplete": false,

    "extensions.experimental.affinity": {
        "vscode.vim": 1
    },
    "editor.smoothScrolling": true,
    "diffEditor.renderSideBySide": false,
    "editor.formatOnSave": true,
}
